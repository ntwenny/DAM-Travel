rules_version = '2';

// Users can only read/write to their own directory
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific directory: users/{userId}/{tripId}/{imageFile}
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Location banners cache - readable by all authenticated users
    // Only writable by backend functions (via Admin SDK)
    match /location-banners/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend functions can write
    }
    
    // Block all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
